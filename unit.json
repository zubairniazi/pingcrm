{
    "listeners": {
        "*:8000": { "pass": "routes" }
    },
    "routes": [
        {
            "match": { "uri": "/build/*" },
            "action": { "share": "/var/www/html/public/build" }
        },
        {
            "match": { "uri": "*" },
            "action": {
                "share": "/var/www/html/public",
                "fallback": { "pass": "applications/laravel" }
            }
        }
    ],
    "applications": {
        "laravel": {
            "type": "php",
            "root": "/var/www/html/public",
            "script": "index.php"
        }
    }
}
