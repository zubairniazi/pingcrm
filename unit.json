{
    "listeners": {
        "*:8000": {
            "pass": "routes",
            "forwarded": {
                "protocol": "X-Forwarded-Proto"
            }
        }
    },
    "routes": [
        {
            "match": {
                "uri": "/build/*"
            },
            "action": {
                "share": "/var/www/html/public$uri"
            }
        },
        {
            "match": {
                "uri": "/favicon.ico"
            },
            "action": {
                "share": "/var/www/html/public/favicon.ico"
            }
        },
        {
            "match": {
                "uri": "!/index.php"
            },
            "action": {
                "share": "/var/www/html/public$uri",
                "fallback": {
                    "pass": "applications/laravel"
                }
            }
        }
    ],
    "applications": {
        "laravel": {
            "type": "php",
            "root": "/var/www/html/public",
            "script": "index.php"
        }
    }
}
